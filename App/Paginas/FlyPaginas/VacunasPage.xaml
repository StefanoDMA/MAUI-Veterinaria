<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FrontEndHealthPets.Paginas.FlyPaginas.VacunasPage"
             Title="Vacunas">

    <ContentPage.BackgroundImageSource>
        <FileImageSource File="fondovacuna.jpeg" />
    </ContentPage.BackgroundImageSource>

    <StackLayout VerticalOptions="Center">
        <Label Text="Vacunas"
                FontSize="Large"
                FontAttributes="Bold"
                HorizontalOptions="Center"
                TextColor="White" />
        
        <Button Text="Agregar Vacuna"
                BackgroundColor="#128ba7"  
                TextColor="White"
                FontAttributes="Bold"
                FontSize="Medium"
                CornerRadius="20"
                HorizontalOptions="Center"
                WidthRequest="250"
                Clicked="OnAddVaccineClicked" />

            <Button Text="Asignar vacuna a mascota"
                BackgroundColor="#128ba7"  
                TextColor="White"
                FontAttributes="Bold"
                FontSize="Medium"
                CornerRadius="20"
                HorizontalOptions="Center"
                WidthRequest="250"
                Clicked="OnConsultVaccineClicked"
                Margin="0,10,0,0" />
    </StackLayout>

</ContentPage>
